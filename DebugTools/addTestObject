printf "\n\n\n"

printf "Message:"
read message
printf "\n\n\n"

# If message not empty, make object with given message
if [ -n "$message" ]
then

    curl -XPOST \
    'http://cmput301.softwareprocess.es:8080/cmput301w17t13/testElasticSearchObject' \
    -d \
    "{
        \"message\": \"${message}\"
    }"

# If message empty, make object with null message
else

    curl -XPOST \
    'http://cmput301.softwareprocess.es:8080/cmput301w17t13/testElasticSearchObject' \
    -d \
    "{
        \"message\": null
    }"

fi

printf "\n\n\n\n"